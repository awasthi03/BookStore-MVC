@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}
@if (TempData["success1"] != null)
{
    <div class="alert alert-dismissible alert-primary">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Well Done!</strong> You have Created a New Category.
    </div>
}
@if (TempData["success2"] != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Well Done!</strong> You Have successfully updated.
    </div>
}
@if (TempData["success3"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Oh Snap!</strong> You Deleted Something!
    </div>
}
